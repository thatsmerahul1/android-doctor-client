<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/appointment_accepted_layout_"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="14dp"
    android:background="@drawable/blue_rectangle_layout_selector"
    android:orientation="horizontal"
    android:padding="8dp"
    android:weightSum="1">

    <com.ecarezone.android.doctor.view.CircleImageView
        android:id="@+id/appointment_patient_avatar_of_request"
        android:layout_width="@dimen/appointment_thumbnail_edge_size"
        android:layout_height="@dimen/appointment_thumbnail_edge_size"
        android:layout_margin="4dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/dr_john_photo"></com.ecarezone.android.doctor.view.CircleImageView>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_weight="0.75"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp">


        <TextView
            android:id="@+id/appointment_accepted_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/appointment_time"
            android:textColor="@color/text_black_color_selector"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/accepted_type_of_call"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="@string/doctor_name1"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/accepted_patient_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:paddingBottom="5dp"
            android:text="@string/doctor_name1"
            android:textSize="16sp" />


    </LinearLayout>
</LinearLayout>


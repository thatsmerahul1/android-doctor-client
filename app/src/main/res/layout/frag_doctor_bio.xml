<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp">

        <com.ecarezone.android.doctor.view.CircleImageView
            android:id="@+id/doctor_bio_profile_pic_id"
            android:layout_width="160dp"
            android:layout_height="160dp"
            android:layout_gravity="center"
            android:src="@drawable/dr_john_photo" >
    </com.ecarezone.android.doctor.view.CircleImageView>


    <TextView
            android:id="@+id/doctor_bio_name_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:text="Patient name"
            android:textColor="@color/text_blue_color_selector"
            android:textSize="20sp" />


    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="10dp"
       >

       <ListView
           android:id="@+id/patient_profile"
           android:layout_width="match_parent"
           android:layout_height="match_parent"
           >

       </ListView>

    </LinearLayout>

</LinearLayout>
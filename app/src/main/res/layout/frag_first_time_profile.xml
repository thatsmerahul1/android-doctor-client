<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp">

    <LinearLayout
        android:id="@+id/layout_profile_add_mine"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        android:layout_margin="4dp"
        android:background="@drawable/green_rectangle_layout_selector">

        <ImageView
            android:layout_width="@dimen/thumbnail_square_size"
            android:layout_height="@dimen/thumbnail_square_size"
            android:layout_margin="4dp"
            android:src="@drawable/profile_list_icon"
            android:layout_gravity="center"
            android:scaleType="fitCenter"
            />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="@string/profile_add_your_profile"
            android:textColor="@color/text_green_color_selector"
            android:textSize="@dimen/text_size_big"
            android:layout_gravity="center"
            />

    </LinearLayout>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/ecarezone_green_dark"
    android:gravity="center_horizontal"
    android:padding="16dp">

    <View
        android:id="@+id/center_gap"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_centerInParent="true" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/center_gap"
        android:src="@drawable/splash_logo_white" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/center_gap"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/center_gap"
        android:textSize="20sp"
        android:textColor="@color/ecarezone_semi_white_transparent"
        android:text="@string/splash_screen_for_doctors" />

</RelativeLayout>
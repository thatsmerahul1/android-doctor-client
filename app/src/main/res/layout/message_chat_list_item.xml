<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/patient_layout_"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="14dp"
    android:background="@drawable/blue_rectangle_layout_selector"
    android:orientation="horizontal">


    <ImageView
        android:id="@+id/messageIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_gravity="center_vertical"
        android:src="@drawable/message_icon" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="10dp"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="8dp"
        android:weightSum="1">

        <TextView
            android:id="@+id/messageSenderName_chat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:textColor="@color/text_black_color_selector"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/messageDetail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ellipsize="end"
            android:layout_below="@+id/messageSenderName_chat"
            android:inputType="textShortMessage"
            android:maxLines="1"
            android:text="details"
            android:textSize="16sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Monday"
            android:id="@+id/timeStamp"
            android:layout_alignParentRight="true"/>


    </RelativeLayout>
</LinearLayout>


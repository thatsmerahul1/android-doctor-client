<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.ecarezone.android.doctor.view.CircleImageView
                android:id="@+id/imageButton"
                android:layout_width="@dimen/profile_thumbnail_edge_size"
                android:layout_height="@dimen/profile_thumbnail_edge_size"
                android:layout_gravity="center_horizontal"
                android:layout_margin="4dp"
                android:src="@drawable/news_other">
            </com.ecarezone.android.doctor.view.CircleImageView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="vertical"
                android:layout_marginLeft="4dp">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/ProfileFormTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_details_name" />

                    <TextView
                        android:id="@+id/name"
                        style="@style/ProfileFormEditTextStyle"
                        android:lines="1"
                         android:layout_width="match_parent"
                        android:layout_height="wrap_content" />
                </FrameLayout>

                <View style="@style/ProfileFormLineViewStyle" />

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        style="@style/ProfileFormTextViewStyle"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/profile_details_gender" />

                    <TextView
                        android:id="@+id/editText_gender"
                        style="@style/ProfileFormEditTextStyle"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        />

                </FrameLayout>
            </LinearLayout>
        </LinearLayout>

        <View style="@style/ProfileFormLineViewStyle" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/ProfileFormTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:text="@string/profile_details_address" />

            <TextView
                android:id="@+id/editText_address"
                style="@style/ProfileFormEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                  />
        </FrameLayout>

        <View style="@style/ProfileFormLineViewStyle" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/ProfileFormTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_details_profile_name" />

            <TextView
                android:id="@+id/editText_profile_name"
                style="@style/ProfileFormEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                  />
        </FrameLayout>

        <View style="@style/ProfileFormLineViewStyle" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/ProfileFormTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_details_birth" />

            <TextView
                android:id="@+id/editText_birthdate"
                style="@style/ProfileFormEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />
        </FrameLayout>

        <View style="@style/ProfileFormLineViewStyle" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/ProfileFormTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_details_ethnicity" />

            <TextView
                android:id="@+id/editText_ethnicity"
                style="@style/ProfileFormEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                  />
        </FrameLayout>

        <View style="@style/ProfileFormLineViewStyle" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/ProfileFormTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_details_height" />

            <TextView
                android:id="@+id/editText_hight"
                style="@style/ProfileFormEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 />
        </FrameLayout>

        <View style="@style/ProfileFormLineViewStyle" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                style="@style/ProfileFormTextViewStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/profile_details_weight" />

            <TextView
                android:id="@+id/editText_weight"
                style="@style/ProfileFormEditTextStyle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                 />
        </FrameLayout>

        <View style="@style/ProfileFormLineViewStyle" />

        <TextView
            android:id="@+id/txtErrorMsg"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@android:color/holo_red_light"
            />

    </LinearLayout>
</ScrollView>

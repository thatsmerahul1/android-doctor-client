<?xml version="1.0" encoding="utf-8"?>
<LinearLayout  xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/patient_layout_"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="14dp"
        android:background="@drawable/blue_rectangle_layout_selector"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="1">
    <com.ecarezone.android.doctor.view.CircleImageView
        android:id="@+id/patient_avatar_of_request"
        android:layout_width="@dimen/profile_thumbnail_edge_size"
        android:layout_height="@dimen/profile_thumbnail_edge_size"
        android:layout_gravity="center_horizontal"
        android:layout_margin="4dp"
        android:src="@drawable/news_other"
         >
    </com.ecarezone.android.doctor.view.CircleImageView>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            android:padding="8dp"
            android:layout_weight="0.75">



            <TextView
                android:id="@+id/myPatient_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="@string/doctor_name1"
                android:textColor="@color/ecarezone_blue_dark"
                android:textSize="20sp"
                android:padding="5dp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal"
                android:weightSum="1">

                <Button
                    android:id="@+id/patient_request_accept"
                    android:layout_width="wrap_content"
                    android:layout_height="31dp"
                    android:text="@string/patient_pending_request_accept"
                    android:textColor="@color/ecarezone_green_dark"
                    android:background="@drawable/btn_green_border_selector"
                    android:layout_weight="0.5" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="    "/>
                <Button
                    android:id="@+id/patient_request_reject"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:text="@string/patient_pending_request_reject"
                    android:textColor="@color/ecarezone_red"
                    android:background="@drawable/btn_red_border"
                    android:layout_weight="0.5"/>
            </LinearLayout>

        </LinearLayout>
    </LinearLayout>


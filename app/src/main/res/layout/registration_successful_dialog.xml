<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="40dp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/add_doctor_success_check"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/ic_action_check_normal"/>

    <TextView
        android:id="@+id/add_doctor_success_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:gravity="center"
        android:textSize="18sp"
        android:text="@string/thanks_for_registration"
        />

    <TextView
        android:id="@+id/start_service"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/start_to_use"
        android:textColor="#69AA0C"
        android:layout_marginTop="40dp"
        android:layout_gravity="center_horizontal" />
</LinearLayout>
<resources>
    <style name="spinnerCustomStyle" parent="@android:style/Widget.Material.Light.Spinner.Underlined"></style>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="navigationIcon">@drawable/back_</item>
    </style>

    <style name="ToolBarStyle" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.ECareZone.ActionBar</item>
    </style>

    <style name="ThemeOverlay.ECareZone.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>

    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/holo_blue_light</item>
    </style>

    <style name="AppThemeForChat" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:colorPrimaryDark">@color/ecarezone_green_dark_2</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
        <item name="navigationIcon">@drawable/back_</item>
    </style>
</resources>

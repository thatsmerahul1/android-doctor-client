<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="windowActionBar">false</item>
        <item name="android:windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="drawerArrowStyle">@style/DrawerArrowStyle</item>
    </style>

    <style name="ToolBarStyle" parent="">
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="theme">@style/ThemeOverlay.ECareZone.ActionBar</item>
    </style>

    <style name="ThemeOverlay.ECareZone.ActionBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="android:textColorPrimary">@android:color/black</item>
    </style>


    <style name="DrawerArrowStyle" parent="Widget.AppCompat.DrawerArrowToggle">
        <item name="spinBars">true</item>
        <item name="color">@android:color/black</item>
    </style>


    <!--custom component-->
    <style name="Button" parent="android:Widget.Button">
        <item name="android:paddingBottom">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@drawable/btn_text_color_selector</item>
    </style>

    <style name="EcareZoneBlueButton" parent="Button">
        <item name="android:background">@drawable/btn_blue_color_selector</item>
    </style>

    <style name="EcareZoneGreenButton" parent="Button">
        <item name="android:background">@drawable/btn_green_color_selector</item>
    </style>
</resources>